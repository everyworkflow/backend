{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@EveryWorkflow/PanelBundle/*": ["everyworkflow/PanelBundle/Resources/assets/*"],
            "@EveryWorkflow/AuthBundle/*": ["everyworkflow/AuthBundle/Resources/assets/*"],
            "@EveryWorkflow/DataFormBundle/*": ["everyworkflow/DataFormBundle/Resources/assets/*"],
            "@EveryWorkflow/DataGridBundle/*": ["everyworkflow/DataGridBundle/Resources/assets/*"],
            "@EveryWorkflow/EavBundle/*": ["everyworkflow/EavBundle/Resources/assets/*"],
            "@EveryWorkflow/MediaManagerBundle/*": ["everyworkflow/MediaManagerBundle/Resources/assets/*"],
            "@EveryWorkflow/PageBuilderBundle/*": ["everyworkflow/PageBuilderBundle/Resources/assets/*"],
            "@EveryWorkflow/StaticBlockBundle/*": ["everyworkflow/StaticBlockBundle/Resources/assets/*"],
            "@EveryWorkflow/PageBundle/*": ["everyworkflow/PageBundle/Resources/assets/*"],
            "@EveryWorkflow/ScopeBundle/*": ["everyworkflow/ScopeBundle/Resources/assets/*"],
            "@EveryWorkflow/UrlRewriteBundle/*": ["everyworkflow/UrlRewriteBundle/Resources/assets/*"],
            "@EveryWorkflow/UserBundle/*": ["everyworkflow/UserBundle/Resources/assets/*"],
            "@EveryWorkflow/CustomerBundle/*": ["everyworkflow/CustomerBundle/Resources/assets/*"],
            "@EveryWorkflow/CatalogCategoryBundle/*": ["everyworkflow/CatalogCategoryBundle/Resources/assets/*"],
            "@EveryWorkflow/CatalogProductBundle/*": ["everyworkflow/CatalogProductBundle/Resources/assets/*"],
            "@EveryWorkflow/SalesOrderBundle/*": ["everyworkflow/SalesOrderBundle/Resources/assets/*"],
            "@EveryWorkflow/AdminPanelBundle/*": ["everyworkflow/AdminPanelBundle/Resources/assets/*"],
            "@EveryWorkflow/FrontendBundle/*": ["everyworkflow/FrontendBundle/Resources/assets/*"]
        }
    },
    "include": [
        "assets"
    ]
}
